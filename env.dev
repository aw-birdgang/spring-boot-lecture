# 개발 환경 환경변수 설정

# 애플리케이션 설정
APP_NAME=spring-boot-lecture-dev
LOG_LEVEL=DEBUG

# 데이터베이스 설정 (H2 인메모리)
DB_HOST=localhost
DB_PORT=8080
DB_USERNAME=sa
DB_PASSWORD=
DB_NAME=dev-db

# Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# 보안 설정
SECURITY_USERNAME=admin
SECURITY_PASSWORD=admin123
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
MOBILE_ADMIN_USERNAME=mobile-admin
MOBILE_ADMIN_PASSWORD=mobile123

# 서버 포트 설정
MOBILE_API_PORT=8081
WEB_API_PORT=8082
ADMIN_API_PORT=8083

# 로깅 설정
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_HISTORY=30

# 캐시 설정
CACHE_TYPE=caffeine
CACHE_TTL=300

# Swagger 설정
SWAGGER_ENABLED=true
SWAGGER_PATH=/swagger-ui.html

# Actuator 설정
ACTUATOR_ENABLED=true
ACTUATOR_BASE_PATH=/actuator
